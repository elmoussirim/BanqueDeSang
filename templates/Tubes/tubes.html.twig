{% extends 'base.html.twig' %}

{% block body %}


    <form class="form-inline my-2 my-lg-0"  method="request" action="{{ path('search_tube') }} ">
        <input class="form-control mr-sm-2" type="text" name="search" placeholder="Chercher">
        <button class="btn btn-secondary my-2 my-sm-0"  type="submit">Chercher</button>
    </form>
    <br>
    <br>
    <br>


    <br>
    <br>
    <br>

    <section class="user">
            
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Date</th>
                        <th scope="col">N° d'ordre</th>
                        <th scope="col">N°cin</th>
                        <th scope="col">Nom & prenom du donneur</th>
                        <th scope="col">Nom & prenom du préleveur</th>
                        <th scope="col">Cin du préleveur</th>
                        <th scope="col">Numéro de tube</th>
                        <th scope="col"></th>
                        <th scope="col"></th>

                    </tr>
                </thead>
                <tbody>

                {% for tube in tubes %}
                    {% for user in users %}
                        {% if user.id == tube.IdUser %}
                            {% if (tube.testee == 'Non') %}
                                <tr class="text-danger">
                            {% else %}
                                <tr class = "text-success">
                            {% endif %}
                                    <td scope="col">{{ tube.Date|date ('d/m/y à H:i')  }}</td>
                                    <td scope="row">{{ tube.NOrdre }}</th>

                                    <th scope="row">{{ tube.CinDonneur }}</th>
                                    <td scope="col">{{ tube.NomDonneur }} {{ tube.PrenomDonneur }}</td>
                                    <td scope="col">{{ user.username }}</td>
                                    <td scope="col">{{ user.NUMCIN }}</td>
                                    <td scope="col">{{ tube.NumTube }}</td>
                                    <td><button type="button" class="btn btn-primary" onclick="window.location.href='/tube/testee/{{ tube.id }}'">Terminer</button></td>
                                    <td><button type="button" class="btn btn-secondary" onclick="window.location.href='/serologie/new/{{ tube.id }}'">Tester</button></td>
                                </tr>
                        {% endif %}
                   {% endfor %}
                {% endfor %}
                </tbody>
            </table>  
    </section>
{% endblock %}
